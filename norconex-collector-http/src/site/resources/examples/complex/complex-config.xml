<httpcollector id="Norconex Complex Collector">

  #set($http = "com.norconex.collector.http")
  #set($core = "com.norconex.collector.core")
  #set($urlNormalizer   = "${http}.url.impl.GenericURLNormalizer")
  #set($filterExtension = "${core}.filter.impl.ExtensionReferenceFilter")
  #set($filterRegexRef  = "${core}.filter.impl.RegexReferenceFilter")

  <workDir>$workdir</workDir>

  <!-- DEPRECATED:
  <progressDir>${workdir}/progress</progressDir>
  <logsDir>${workdir}/logs</logsDir>
   -->  

  <crawlerDefaults>

    <urlNormalizer class="$urlNormalizer" />
    <numThreads>2</numThreads>
    <maxDepth>0</maxDepth>
    <workDir>$workdir</workDir>
    <orphansStrategy>DELETE</orphansStrategy>
    
    <!-- We know we don't want to crawl the entire site, so ignore sitemap. -->
    <sitemapResolver ignore="true" />

    <referenceFilters>
      <filter class="$filterExtension" onMatch="exclude">jpg,gif,png,ico,css,js</filter>
      <filter class="$filterRegexRef">https://opensource\.norconex\.com/collectors/http/test/.*</filter>
    </referenceFilters>

  </crawlerDefaults>

  <crawlers>

    <crawler id="Norconex Complex Test Page 1">
      <startURLs>
        <url>https://opensource.norconex.com/collectors/http/test/complex1.php</url>
      </startURLs>
      #parse("shared/importer-config.xml")
      <committers>
        <committer class="com.norconex.committer.core3.fs.impl.XMLFileCommitter">
         <fileNamePrefix>complex1_</fileNamePrefix>
        </committer>
      </committers>
    </crawler>

    <crawler id="Norconex Complex Test Page 2">
      <startURLs>
        <url>https://opensource.norconex.com/collectors/http/test/complex2.php</url>
      </startURLs>
      #parse("shared/importer-config.xml")
      <committers>
        <committer class="com.norconex.committer.core3.fs.impl.XMLFileCommitter">
         <fileNamePrefix>complex2_</fileNamePrefix>
        </committer>
      </committers>
    </crawler>

  </crawlers>

</httpcollector>