<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema">

  <xs:include schemaLocation="/com/norconex/importer/Importer.xsd"></xs:include>

  <xs:redefine schemaLocation="/com/norconex/crawler/core/crawler/CrawlerConfig.xsd">
  
    <xs:complexType name="StartType">
      <xs:complexContent>
        <xs:extension base="StartType">
	      <xs:attribute name="stayOnDomain" type="xs:boolean"/>
	      <xs:attribute name="includeSubdomains" type="xs:boolean"/>
	      <xs:attribute name="stayOnPort" type="xs:boolean"/>
	      <xs:attribute name="stayOnProtocol" type="xs:boolean"/>
        </xs:extension>
      </xs:complexContent>
    </xs:complexType>
  
    <xs:complexType name="CrawlerConfigType">
      <xs:complexContent>
        <xs:extension base="CrawlerConfigType">
          <xs:all>
            <xs:element name="keepReferencedLinks" type="xs:string" minOccurs="0" maxOccurs="1"/>
            <xs:element name="urlNormalizer" type="anyComplexOptionalClassType" minOccurs="0" maxOccurs="1"/>
            <xs:element name="delay" type="anyComplexOptionalClassType" minOccurs="0" maxOccurs="1"/>
            <xs:element name="robotsTxt" type="anyComplexOptionalClassType" minOccurs="0" maxOccurs="1"/>
            <xs:element name="sitemapLocator" type="anyComplexOptionalClassType" minOccurs="0" maxOccurs="1"/>
            <xs:element name="sitemapResolver" type="anyComplexOptionalClassType" minOccurs="0" maxOccurs="1"/>
            <xs:element name="recrawlableResolver" type="anyComplexOptionalClassType" minOccurs="0" maxOccurs="1"/>
            <xs:element name="canonicalLinkDetector" type="anyComplexOptionalClassType" minOccurs="0" maxOccurs="1"/>
            <xs:element name="robotsMeta" type="anyComplexOptionalClassType" minOccurs="0" maxOccurs="1"/>
            <xs:element name="linkExtractors" minOccurs="0" maxOccurs="1">
              <xs:complexType>
                <xs:all>
                  <xs:element name="extractor" 
                      type="anyComplexRequiredClassType" minOccurs="0" maxOccurs="unbounded"/>
                </xs:all>
              </xs:complexType>
            </xs:element>
            <xs:element name="postImportLinks" minOccurs="0" maxOccurs="1">
              <xs:complexType>
                <xs:all>
                  <xs:element name="fieldMatcher" type="TextMatcherType" minOccurs="0" maxOccurs="1" />  
                </xs:all>
                <xs:attribute name="keep" type="xs:boolean"/>
              </xs:complexType>
            </xs:element>          
          </xs:all>
        </xs:extension>
      </xs:complexContent>
    </xs:complexType>
  </xs:redefine>

  <xs:element name="sitemap" substitutionGroup="startRefsChoice" type="xs:string"/>
  
</xs:schema>
