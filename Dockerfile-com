FROM 4.0.0-crawler
ARG committer_type

WORKDIR /nxer

RUN if [ "$committer_type" = "crawler-es" ]; then \
      #COPY $committer_type /nxer && \
	  mkdir /nxer/es_folder && \
          echo "es copy"; \
	elif [ "$committer_type" = "crawler-solr" ]; then \
          echo "solr copy" && \
          COPY fakefile . && \
	  mkdir /nxer/solr-folder; \
	else \
      echo "other committers to copy" && \
	  mkdir /nxer/other-copy; \
	fi


RUN ls -l && \
    ls -l
